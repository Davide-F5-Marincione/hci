<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">

    <include
        android:id="@+id/fragment_path_includeBaseCard"
        layout="@layout/card_select_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_path_includeBaseCard">


        <TextView
            android:id="@+id/path_card_reportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:text="Report and help the community!"
            android:textAlignment="textEnd"
            android:textColor="#A0A5A9"
            android:textSize="10sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/path_card_notOvercrowdedButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="@string/notovercrowded"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:backgroundTint="@color/green_extra"
            app:cornerRadius="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/path_card_overcrowdedButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="180dp"
            android:layout_height="60dp"

            android:layout_marginStart="215dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"

            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="@string/overcrowded"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:backgroundTint="@color/green_extra"
            app:cornerRadius="4dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>