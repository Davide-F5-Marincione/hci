<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/gray_disabled"
                android:centerColor="@color/gray_disabled"
                android:centerY="1.0"
                android:endColor="@color/gray_disabled"
                android:angle="270"
                />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:startColor="@color/green_extra"
                    android:centerColor="@color/green_extra"
                    android:centerY="1.0"
                    android:endColor="@color/green_extra"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>